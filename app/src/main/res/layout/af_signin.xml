<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtUserName"
        android:hint="UserId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="76dp"
        app:layout_constraintTop_toTopOf="parent" android:visibility="visible"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:hint="password"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtUserName"
        app:layout_constraintStart_toStartOf="@+id/txtUserName" app:layout_constraintEnd_toEndOf="@+id/txtUserName"
        android:visibility="visible"/>
    <Button
        android:text="LogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubmit"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/txtPassword"
        app:layout_constraintEnd_toEndOf="@+id/txtPassword" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPassword"/>
    <Button
        android:text="SignUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignUP" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/btnSubmit"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>