<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SwitchIn" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorBlue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorGray</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorGray
        </item>
    </style>

    <style name="SwitchOut" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorRed</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorGray</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorGray
        </item>
    </style>

</resources>
